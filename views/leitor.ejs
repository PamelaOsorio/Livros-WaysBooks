<body>
    <div class="alert alert-danger " role="alert">
       Preencha o campo de cadastro abaixo
    </div>
     <form>
        <div class="form-row">
            <div class="col-md-4 offset-md-0">
                <label for='inputApelido'>Nome</label>
                <input type='text' class='form-control' id='inputApelido' maxlength='50'>
            </div>
            <div class="col-md-5 offset-md-0">
                <label for='inputNick'>Sobrenome</label>
                <input type='text' class='form-control' id='inputNick' maxlength='100'>
            </div>
            <div class="col-md-2 offset-md-1">
                <label for='inputData'>Data Nascimento</label>
                <input type='date' class='form-control' id='inputData' maxlength='10'>
            </div>
        </div>

        <!-- segunda linha-->
    </div>
    <form>
       <div class="form-row">
           <div class="col-md-4 offset-md-0">
               <label for='inputBairro'>Bairro</label>
               <input type='text' class='form-control' id='inputBairro' maxlength='50'>
           </div>
           <div class="col-md-5 offset-md-0">
               <label for='inputRua'>Rua</label>
               <input type='text' class='form-control' id='inputRua' maxlength='100'>
           </div>
           <div class="col-md-2 offset-md-1">
               <label for='inputNumber'>Número</label>
               <input type='text' class='form-control' id='inputNumber' maxlength='10'>
           </div>
       </div>
        <br>
    </div>
    <form>
       <div class="form-row">
           <div class="col-md-4 offset-md-0">
               <label for='inputTel'>Telefone</label>
               <input type='text' class='form-control' id='inputTel' maxlength='12'>
           </div>
            <div class="col-md-4 offset-md-0">
                <label for='inputEmail'>E-mail</label>
                <input type='email' class='form-control' id='inputEmail' maxlength='40'>
            </div>
        </div>
        <!--terceira linha-->
        <br>
        <!-- quarta linha-->
        <br>

            <br> <br>
            <button type="submit" class="btn btn-outline-danger">Salvar</button>
    </form>
