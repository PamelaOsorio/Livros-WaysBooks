</head>

<header id="cabecalho" alt="cabecalho" style="width: auto;">
    <p class="font-weight-bold" style="font-family:'Berkshire Swash'; color: rgb(0, 0, 0); font-size: 48px; border-color: tomato; border-left: 2px; "><img style="width:80px" src="/./images/icons8-livros-100.png"> WaysBooks</p>
  </header>

<body style="background:#b6a1c0;">
   
        <br>
        <br>
        <div class="row mb-2">
            <a href="/funcionarios/funcionario_new" class="btn btn-danger d-flex align-items-center"><i
                    class="material-icons mr-2">add_circle</i>
                Novo cadastro</a>
        </div>
       <br>
      
        <div class="row mb-4">
            <div class="table-responsive">
                <table class="table table-sm text-center">
                    <thead>
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nome</th>
                        <th scope="col">Data de Nascimento</th>
                        <th scope="col">E-mail</th>
                        <th scope="col">Ação</th>
                        <th scope="col">Ação</th>
                    </tr>
                </thead>

            <!--<% if(funcionarios.length<1){%>

            <p class="alert alert-primary d-flex align-items-center">Nenhum empréstimo foi cadastrado ainda</p>

            <%  } %>-->


            <% funcionarios.forEach(funcionario=>{ %>

                
                            
                         
                        <tbody>
                    <tr>

                    <th scope="row"></th>
                      <td> <%= funcionario.name %> </td>
                      <td> <%= funcionario.datanasc %> </td>
                      <td> <%= funcionario.email %> </td>
                     
                      
                      
                      <td><!--<div class="d-none options card rounded-pill shadow-sm p-1 position-absolute">-->
                        <a href="funcionarios/funcionario_edit/<%=funcionario.id %> " class="rounded-circle p-2 mb-2"
                            style="background:blue;">
                            <i class="material-icons" style="color:white">create</i>
                        </a>
                      </td>
                      <td>  <form action="/funcionarios/<%=funcionario.id%>?_method=DELETE" method="POST">
                            <button class="rounded-circle p-2 bg-danger">
                                <i class="material-icons" style="color:white">delete</i>

                            </button>
                        </form><!--</div--></td>
                </tr>
                </tbody>



            <% }) %>
            </table>

            </div>


        </div>      
        <script src="/js/index.js"></script>



