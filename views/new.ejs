<body style="background: rgb(184, 137, 196);">

    <div class="container">

        <form action="/livros" method="POST" enctype="multipart/form-data">
            <div class="form-row">
                <div class="col-md-4 offset-md-0">

                <label for="title" class="text-black">Título</label>
                <input type="text" class="form-control" placeholder="Título" name="title" required>
            </div>

            <div class="col-md-4 offset-md-0">

                <label for="author" class="text-black">Autor(a)</label>
                <input type="text" class="form-control" placeholder="Autor(a)" name="author" required>
            </div>
          
            <div class="col-md-1 offset-md-0">

                <label for="year" class="text-black">Ano</label>
                <input type="text" class="form-control" placeholder="Ano" name="year" required>

            </div> 
            </div>
            <br>
            <div class="form-row">
                <div class="col-md-2 offset-md-0">

                <label for="editora" class="text-black">Editora</label>
                <input type="text" class="form-control" placeholder="Editora" name="editora" required>

            </div> 
                <div class="col-md-5 offset-md-0">

                <label for="kindof" class="text-black">Gênero</label>
                <input type="text" class="form-control" placeholder="Gênero" name="kindof" required>

            </div> 
            </div>
